@model List<MundialClubes.Entidades.EF.JugadorEstrella>

    @{
    ViewData["Title"] = "Lista de Jugadores Estrella";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Lista de Jugadores Estrella</h1>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Foto</th>
                <th>Descripcion</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var jugador in Model)
            {
                <tr class="text-center align-middle">
                <td>
                    <a href="/JugadorEstrella/Editar/@jugador.IdJugadorEstrella" class="text-decoration-none fw-semibold">
                        @jugador.Nombre
                    </a>
                </td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(jugador.FotoUrl))
                    {
                        <img src="@jugador.FotoUrl" style="height:120px; width:100px; object-fit:cover;" alt="@jugador.Nombre" />
                    }
                </td>
                <td>@jugador.Descripcion</td>
                    <td><a href="/JugadorEstrella/Eliminar/@jugador.IdJugadorEstrella">Eliminar</a></td>
                </tr>
            }
    </tbody>
</table>

